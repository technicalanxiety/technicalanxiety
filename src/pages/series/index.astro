---
import { getCollection } from 'astro:content';
import { getPublishedPosts } from '../../utils/posts';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import OptimizedImage from '../../components/OptimizedImage.astro';

const seriesEntries = await getCollection('series');
const publishedPosts = await getPublishedPosts();

// Build series data with post counts (only published posts)
const seriesData = seriesEntries.map(entry => {
  const posts = publishedPosts.filter(post => post.data.series === entry.data.title);
  const latestPost = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())[0];
  
  return {
    ...entry,
    postCount: posts.length,
    latestDate: latestPost?.data.date,
  };
})
.filter(series => series.postCount > 0) // Only show series with published posts
.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));

const featuredSeries = seriesData.filter(s => s.data.featured);
const otherSeries = seriesData.filter(s => !s.data.featured);
---

<BaseLayout 
  title="Series"
  description="Multi-part frameworks and deep dives into technical leadership, Azure operations, and building reliable systems."
>
  <Header />
  
  <div class="series-index">
    <header class="series-index-header">
      <h1>Series</h1>
      <p class="series-index-intro">
        Multi-part frameworks and deep dives. These aren't just related postsâ€”they're structured bodies of work building toward complete understanding.
      </p>
    </header>

    {featuredSeries.length > 0 && (
      <section class="series-section">
        <h2 class="series-section-title">Featured Series</h2>
        <div class="series-grid featured">
          {featuredSeries.map(series => (
            <article class="series-card featured">
              <a href={`/series/${series.slug}/`} class="series-card-link">
                {series.data.image && (
                  <div class="series-card-image">
                    <OptimizedImage 
                      src={`/img/${series.data.image}`}
                      alt={series.data.title}
                      width={600}
                      height={300}
                    />
                  </div>
                )}
                <div class="series-card-content">
                  <div class="series-card-badge">Featured</div>
                  <h3 class="series-card-title">{series.data.title}</h3>
                  <p class="series-card-description">{series.data.description}</p>
                  <div class="series-card-meta">
                    <span class="series-card-count">
                      {series.postCount} {series.postCount === 1 ? 'Part' : 'Parts'}
                    </span>
                    {series.data.tags && (
                      <div class="series-card-tags">
                        {series.data.tags.slice(0, 3).map(tag => (
                          <span class="series-card-tag">{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </section>
    )}

    {otherSeries.length > 0 && (
      <section class="series-section">
        <h2 class="series-section-title">All Series</h2>
        <div class="series-grid">
          {otherSeries.map(series => (
            <article class="series-card">
              <a href={`/series/${series.slug}/`} class="series-card-link">
                {series.data.image && (
                  <div class="series-card-image">
                    <OptimizedImage 
                      src={`/img/${series.data.image}`}
                      alt={series.data.title}
                      width={400}
                      height={200}
                    />
                  </div>
                )}
                <div class="series-card-content">
                  <h3 class="series-card-title">{series.data.title}</h3>
                  <p class="series-card-description">{series.data.description}</p>
                  <div class="series-card-meta">
                    <span class="series-card-count">
                      {series.postCount} {series.postCount === 1 ? 'Part' : 'Parts'}
                    </span>
                    {series.data.tags && (
                      <div class="series-card-tags">
                        {series.data.tags.slice(0, 3).map(tag => (
                          <span class="series-card-tag">{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </section>
    )}
  </div>
  
  <Footer />
</BaseLayout>

<style>
  .series-index {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .series-index-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .series-index-header h1 {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--text-color, #333);
  }

  .series-index-intro {
    font-size: 1.25rem;
    color: var(--text-muted, #666);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .series-section {
    margin-bottom: 4rem;
  }

  .series-section-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 2rem 0;
    color: var(--text-color, #333);
  }

  .series-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .series-grid.featured {
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  }

  .series-card {
    background: var(--card-bg, white);
    border: 1px solid var(--card-border, #e0e0e0);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .series-card.featured {
    border: 2px solid var(--accent-color, #007acc);
  }

  .series-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .series-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .series-card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .series-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .series-card-content {
    padding: 1.5rem;
  }

  .series-card-badge {
    display: inline-block;
    background: var(--accent-color, #007acc);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .series-card-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: var(--text-color, #333);
    line-height: 1.3;
  }

  .series-card-description {
    font-size: 0.95rem;
    color: var(--text-muted, #666);
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }

  .series-card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .series-card-count {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-color, #333);
  }

  .series-card-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .series-card-tag {
    background: var(--tag-bg, #f0f0f0);
    color: var(--tag-color, #666);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
  }

  /* Dark Theme */
  :global([data-theme="dark"]) .series-index {
    --text-color: #e0e0e0;
    --text-muted: #a0a0a0;
    --card-bg: #1a1a1a;
    --card-border: #404040;
    --tag-bg: #333;
    --tag-color: #a0a0a0;
    --accent-color: #4da6ff;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .series-index-header h1 {
      font-size: 2rem;
    }

    .series-index-intro {
      font-size: 1.1rem;
    }

    .series-grid,
    .series-grid.featured {
      grid-template-columns: 1fr;
    }
  }
</style>
