---
// Recruiter Chat Component - POC with client-side rate limiting
---

<div id="chat-widget" class="chat-widget">
  <button id="chat-toggle" class="chat-toggle" aria-label="Open chat">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>
  </button>

  <div id="chat-window" class="chat-window">
    <div class="chat-header">
      <h3>Talk To jAIson</h3>
      <button id="chat-close" class="chat-close" aria-label="Close chat">×</button>
    </div>

    <div id="chat-messages" class="chat-messages">
      <div class="chat-message assistant">
        <p>Hi! I can answer questions about Jason Rinehart's background, skills, and experience. What would you like to know?</p>
      </div>
    </div>

    <div class="chat-input-container">
      <textarea 
        id="chat-input" 
        class="chat-input" 
        placeholder="Ask about Jason's experience..."
        rows="2"
        maxlength="1000"
      ></textarea>
      <button id="chat-send" class="chat-send" aria-label="Send message">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
      </button>
    </div>

    <div class="chat-footer">
      <small>Powered by Hugging Face • <span id="usage-count">0</span>/20 messages today</small>
    </div>
  </div>
</div>

<style>
  .chat-widget {
    position: fixed;
    bottom: 30px;
    right: 100px;
    z-index: 1000;
  }

  .chat-toggle {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--accent-color, #0066cc);
    color: var(--bg-primary, white);
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 12px var(--shadow, rgba(0, 0, 0, 0.15));
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .chat-toggle:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 16px var(--shadow, rgba(0, 0, 0, 0.2));
  }

  .chat-window {
    position: absolute;
    bottom: 80px;
    right: 0;
    width: 380px;
    max-width: calc(100vw - 40px);
    height: 500px;
    background: var(--bg-primary, white);
    border-radius: 12px;
    box-shadow: 0 8px 24px var(--shadow, rgba(0, 0, 0, 0.15));
    display: flex;
    flex-direction: column;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px) scale(0.95);
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
    pointer-events: none;
  }

  .chat-window.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
    pointer-events: auto;
  }

  .chat-header {
    background: var(--accent-color, #0066cc);
    color: white;
    padding: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .chat-header h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
  }

  .chat-close {
    background: none;
    border: none;
    color: white;
    font-size: 28px;
    cursor: pointer;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .chat-close:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    background: var(--bg-secondary, #f8f9fa);
  }

  .chat-message {
    padding: 12px;
    border-radius: 8px;
    max-width: 85%;
    word-wrap: break-word;
  }

  .chat-message.user {
    background: #e3f2fd;
    align-self: flex-end;
    margin-left: auto;
    color: var(--text-primary, #212529);
  }

  .chat-message.assistant {
    background: var(--bg-tertiary, #f5f5f5);
    align-self: flex-start;
    color: var(--text-primary, #212529);
  }

  .chat-message.error {
    background: #ffebee;
    color: #c62828;
  }

  .chat-message p {
    margin: 0;
    font-size: 14px;
    line-height: 1.5;
  }

  .chat-input-container {
    display: flex;
    gap: 8px;
    padding: 12px;
    border-top: 1px solid var(--border-color, #e0e0e0);
    background: var(--bg-primary, white);
  }

  .chat-input {
    flex: 1;
    border: 1px solid var(--border-color, #ddd);
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 14px;
    font-family: inherit;
    resize: none;
    background: var(--bg-primary, white);
    color: var(--text-primary, #212529);
  }

  .chat-input:focus {
    outline: none;
    border-color: var(--accent-color, #0066cc);
  }

  .chat-send {
    background: var(--accent-color, #0066cc);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 8px 12px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .chat-send:hover:not(:disabled) {
    opacity: 0.9;
  }

  .chat-send:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .chat-footer {
    padding: 8px 16px;
    background: var(--bg-tertiary, #f9f9f9);
    border-top: 1px solid var(--border-color, #e0e0e0);
    text-align: center;
  }

  .chat-footer small {
    color: var(--text-secondary, #666);
    font-size: 12px;
  }

  @media (max-width: 480px) {
    .chat-widget {
      bottom: 20px;
      right: 75px;
    }

    .chat-toggle {
      width: 45px;
      height: 45px;
    }

    .chat-window {
      width: calc(100vw - 40px);
      height: 400px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Client-side rate limiting
    const RATE_LIMIT = {
      maxPerDay: 20,
      storageKey: 'chat-usage'
    };

  function getRateLimitData() {
    const stored = localStorage.getItem(RATE_LIMIT.storageKey);
    if (!stored) return { count: 0, date: new Date().toDateString() };
    
    const data = JSON.parse(stored);
    // Reset if new day
    if (data.date !== new Date().toDateString()) {
      return { count: 0, date: new Date().toDateString() };
    }
    return data;
  }

  function incrementUsage() {
    const data = getRateLimitData();
    data.count++;
    localStorage.setItem(RATE_LIMIT.storageKey, JSON.stringify(data));
    updateUsageDisplay();
    return data.count;
  }

  function updateUsageDisplay() {
    const data = getRateLimitData();
    const usageEl = document.getElementById('usage-count');
    if (usageEl) {
      usageEl.textContent = data.count;
    }
  }

  function checkRateLimit() {
    const data = getRateLimitData();
    return data.count < RATE_LIMIT.maxPerDay;
  }

  // Chat state
  let conversationHistory = [];

  // DOM elements
  const chatToggle = document.getElementById('chat-toggle');
  const chatWindow = document.getElementById('chat-window');
  const chatClose = document.getElementById('chat-close');
  const chatMessages = document.getElementById('chat-messages');
  const chatInput = document.getElementById('chat-input');
  const chatSend = document.getElementById('chat-send');

  // Toggle chat window
  chatToggle?.addEventListener('click', () => {
    if (chatWindow) {
      const isOpen = chatWindow.classList.contains('open');
      if (isOpen) {
        chatWindow.classList.remove('open');
      } else {
        chatWindow.classList.add('open');
        chatInput?.focus();
        updateUsageDisplay();
      }
    }
  });

  chatClose?.addEventListener('click', () => {
    if (chatWindow) {
      chatWindow.classList.remove('open');
    }
  });

  // Add message to UI
  function addMessage(content, role) {
    const messageDiv = document.createElement('div');
    messageDiv.className = `chat-message ${role}`;
    
    const p = document.createElement('p');
    p.textContent = content;
    messageDiv.appendChild(p);
    
    chatMessages?.appendChild(messageDiv);
    chatMessages?.scrollTo(0, chatMessages.scrollHeight);
  }

  // Send message
  async function sendMessage() {
    const message = chatInput?.value.trim();
    if (!message) return;

    // Check rate limit
    if (!checkRateLimit()) {
      addMessage('Daily message limit reached. Please try again tomorrow.', 'error');
      return;
    }

    // Disable input
    if (chatInput) chatInput.disabled = true;
    if (chatSend) chatSend.disabled = true;

    // Add user message
    addMessage(message, 'user');
    conversationHistory.push({ role: 'user', content: message });

    // Clear input
    if (chatInput) chatInput.value = '';

    try {
      const response = await fetch('/api/chat', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          message,
          conversationHistory: conversationHistory.slice(-8) // Last 4 exchanges
        })
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Failed to get response');
      }

      const data = await response.json();
      
      // Add assistant message
      addMessage(data.response, 'assistant');
      conversationHistory.push({ role: 'assistant', content: data.response });

      // Increment usage
      incrementUsage();

    } catch (error) {
      console.error('Chat error:', error);
      addMessage(error.message || 'Sorry, something went wrong. Please try again.', 'error');
    } finally {
      // Re-enable input
      if (chatInput) chatInput.disabled = false;
      if (chatSend) chatSend.disabled = false;
      chatInput?.focus();
    }
  }

  // Event listeners
  chatSend?.addEventListener('click', sendMessage);
  
  chatInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  });

  // Initialize usage display
  updateUsageDisplay();
  });
</script>
