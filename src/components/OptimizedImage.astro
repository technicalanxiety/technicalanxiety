---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  priority?: boolean;
}

const { 
  src, 
  alt, 
  width, 
  height, 
  class: className = '', 
  loading = 'lazy',
  priority = false 
} = Astro.props;

// Extract filename and extension for optimized versions
const filename = src.replace('/img/', '').replace(/\.[^/.]+$/, '');
const originalExtension = src.match(/\.([^/.]+)$/)?.[1] || 'jpg';
const isOptimized = src.includes('/img/');

// Determine the best fallback format - prefer jpg if available, otherwise use original extension
const fallbackFormat = originalExtension === 'png' ? 'png' : 'jpg';

// Only preload if explicitly marked as priority AND eager loading
const shouldPreload = priority && loading === 'eager';
---

{shouldPreload && isOptimized && (
  <>
    <link rel="preload" as="image" href={`/img/optimized/${filename}.avif`} type="image/avif" />
    <link rel="preload" as="image" href={`/img/optimized/${filename}.webp`} type="image/webp" />
  </>
)}

{isOptimized ? (
  <picture class={className}>
    <!-- AVIF format (best compression, newest browsers) -->
    <source 
      srcset={`/img/optimized/${filename}.avif`}
      type="image/avif"
    />
    
    <!-- WebP format (good compression, wide support) -->
    <source 
      srcset={`/img/optimized/${filename}.webp`}
      type="image/webp"
    />
    
    <!-- Fallback img element with JavaScript error handling -->
    <img 
      src={`/img/optimized/${filename}.${fallbackFormat}`}
      alt={alt}
      width={width}
      height={height}
      loading={loading}
      decoding="async"
      class={className}
      style="width: 100%; height: auto;"
      onerror={`this.onerror=null; this.src='${src}';`}
    />
  </picture>
) : (
  <!-- Non-optimized image fallback -->
  <img 
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    decoding="async"
    class={className}
    style="width: 100%; height: auto;"
  />
)}

<style>
  picture {
    display: block;
  }
  
  img {
    max-width: 100%;
    height: auto;
  }
</style>